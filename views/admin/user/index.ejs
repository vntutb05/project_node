<div class="container-fluid">
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Users List</h6>
    </div>
    <%-include("../partials/message")%>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Adrress</th>
              <th>Phone</th>
              <th>isAdmin</th>
              <th style="width: 20%;">Action</th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Adrress</th>
              <th>Phone</th>
              <th>isAdmin</th>
              <th>Action</th>
            </tr>
          </tfoot>
          <tbody>
            <%data.forEach(function(item){%>
              <tr>
                <td>
                  <%=item.name%>
                </td>
                <td>
                  <%=item.email%>
                </td>
                <td>
                  <%=item.address%>
                </td>
                <td>
                  <%=item.phone%>
                </td>
                <td>true</td>
                <td>
                  <a href="/admin/user/edit/<%=item._id%>" class="alert alert-primary">Edit</a>
                  <a href="/admin/user/delete/<%=item._id%>" class="alert alert-danger">Delete</a>
                </td>
              </tr>
              <%})%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>