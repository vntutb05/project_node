
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Edit Users</h6>
        </div>
        <%-include("../partials/message")%>
        <div class="col-12">
            <form action="/admin/user/edit/<%=data._id%>" class="formReg" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" placeholder="Input your email" class="form-control" id="email" name="email" value="<%=data.email%>" disabled>
                </div>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" placeholder="Input your name" class="form-control" id="name" name="name" value="<%=data.name%>">
                </div>
                <div class="form-group">
                    <label for="phone">Phone Number</label>
                    <input type="number" placeholder="Your Phone Number.." class="form-control" id="phone" name="phone" value="<%=data.phone%>">
                </div>
                <div class="form-group">
                    <label for="address">Address</label>
                    <input type="text" placeholder="Your Address.." class="form-control" id="address" name="address" value="<%=data.address%>">
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-6">
                            <label for="password">Password</label>
                            <input type="password" placeholder="Your Password.." class="form-control" id="password"
                                name="password">
                        </div>
                        <div class="col-sm-6">
                            <label for="repassword">RePassword</label>
                            <input type="password" placeholder="Your RePassword.." class="form-control" id="repassword"
                                name="repassword">
                        </div>
                    </div>
                </div>
                <h6>Quyền hạn</h6>
                <div class="row">
                    <div class="col col-4">
                        <div class="form-check">
                            <input type="radio" class="form-check-input" value=0 id="superAdmin" name="power" <%=(data.isAdmin==0)?'checked':''%> >
                            <label class="form-check-label" for="superAdmin">SuperAdmin</label>
                        </div>
                    </div>
                    <div class="col col-4">
                        <div class="form-check">
                            <input type="radio" class="form-check-input" value=1 id="Admin" name="power" <%=(data.isAdmin==1)?'checked':''%> >
                            <label class="form-check-label" for="Admin">Admin</label>
                        </div>
                    </div>
                    <div class="col col-4">
                        <div class="form-check">
                            <input type="radio" class="form-check-input" value=2 id="Guest" name="power" <%=(data.isAdmin==2)?'checked':''%>>
                            <label class="form-check-label" for="Guest">Guest</label>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary  btn-user btn-block mt-2">Lưu</button>
            </form>
        </div>
    </div>
</div>
