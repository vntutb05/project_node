<%- include("../../layout/admin/head")%>

<%- include("../../layout/admin/slidebar")%>

<%- include("../../layout/admin/topbar")%>
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Add Products</h6>
        </div>
        <%-include("../../layout/message")%>
        <div class="col-12">
            <form action="/admin/product/add" class="formReg" method="POST" >
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" placeholder="Input name product" class="form-control" id="name" name="name" value ="<%=(typeof(data)=='undefined') ? '' :data.name%>">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Category select</label>
                    <select class="form-control" id="exampleFormControlSelect1" name="category">
                        <% cate.forEach(function(cate){%>
                            <option value="<%=cate._id%>" ><%=cate.name%></option>
                        <%})%>
                    </select>
                </div>
                <div class="form-group">
                    <label for="tag">Tag</label>
                    <input type="text" placeholder="Input tag" class="form-control" id="tag" name="tag" value ="<%=(typeof(data)=='undefined') ? '' :data.tag%>">
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input type="number" placeholder="Your price product.." class="form-control" id="price" name="price" value ="<%=(typeof(data)=='undefined') ? '' :data.price%>">
                </div>
                <div class="form-group">
                    <label for="sale">Sale</label>
                    <input type="number" placeholder="Your Sale Price.." class="form-control" id="sale" name="sale" value ="<%=(typeof(data)=='undefined') ? '' :data.sale%>">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input type="text" placeholder="Your Sale Price.." class="form-control" id="description" name="description" value ="<%=(typeof(data)=='undefined') ? '' :data.description%>">
                </div>
                <div class="form-group">
                    <label for="iamge">Image</label>
                    <input type="file" class="form-control" name="image" id="image">
                </div>
                <button type="submit" class="btn btn-primary  btn-user btn-block mt-2">LÆ°u</button>
            </form>
        </div>
    </div>
</div>
<%- include("../../layout/admin/footer")%>